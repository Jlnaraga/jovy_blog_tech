<div class="container">
    <div class="card bg-white">
        <div class="card-body p-5">
        <form id="form-login" class="mb-3 mt-md-4">
            <h2 class="fw-bold mb-2 text-uppercase ">Tech Blog</h2>
            <p class=" mb-5">Please enter your login and password!</p>
            <div class="mb-3">
            <label for="username" class="form-label ">Username</label>
            <input class="form-control" id="username" name="username" placeholder="Enter your Username">
            </div>
            <div class="mb-3">
            <label for="password" class="form-label ">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="*******">
            </div>
            <div class="d-grid">
            <button class="btn btn-outline-dark" type="submit">Login</button>
            </div>
        </form>
        <div>
            <p class="mb-0  text-center">Don't have an account? <a href="/auth/signup" class="text-primary fw-bold">Sign
                Up</a></p>
        </div>

        </div>
    </div>
</div>

